// vim: ts=2:sts=2:sw=2

// the base color selector light or dark
the-bg = "dark"

// the actual color definition. For base16, its done in a quite generic way...
base00(a=1)     // dark: bg
  rgba(#abcdef, a)
base01(a=1)     // dark: bg highlight
  rgba(#abcdef, a)
base02(a=1)     // light: emphasized; dark: comment
  rgba(#abcdef, a)
base03(a=1)     // light: std. text
  rgba(#abcdef, a)
base04(a=1)     // dark: std. text
  rgba(#abcdef, a)
base05(a=1)     // light: comment; dark: emphasized
  rgba(#abcdef, a)
base06(a=1)     // light: bg highlight
  rgba(#abcdef, a)
base07(a=1)     // light: bg
  rgba(#abcdef, a)
base08(a=1)     // syellow
  rgba(#abcdef, a)
base09(a=1)     // sorange
  rgba(#abcdef, a)
base0A(a=1)     // sred
  rgba(#abcdef, a)
base0B(a=1)     // smagenta
  rgba(#abcdef, a)
base0C(a=1)     // sviolet
  rgba(#abcdef, a)
base0D(a=1)     // sblue
  rgba(#abcdef, a)
base0E(a=1)     // scyan
  rgba(#abcdef, a)
base0F(a=1)     // sgreen
  rgba(#abcdef, a)

// generic, selector-dependend color selection
bgcol(a=1)
  if the-bg == "light"
    base07(a)
  else
    base01(a)
bghcol(a=1)
  if the-bg == "light"
    base06(a)
  else
    base01(a)
fgcol(a=1)
  if the-bg == "light"
    base03(a)
  else
    base04(a)
fghcol(a=1)
  if the-bg == "light"
    base02(a)
  else
    base05(a)
comment(a=1)
  if the-bg == "light"
    base05(a)
  else
    base02(a)

// solarized equivalenz wrapper
syellow(a=1)
  base08(a)
sorange(a=1)
  base09(a)
sred(a=1)
  base0A(a)
smagenta(a=1)
  base0B(a)
sviolet(a=1)
  base0C(a)
sblue(a=1)
  base0D(a)
scyan(a=1)
  base0E(a)
sgreen(a=1)
  base0F(a)

